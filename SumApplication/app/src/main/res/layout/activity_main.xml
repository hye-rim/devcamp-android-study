<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.hyerim.sumapplication_hyerim.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/main_num1_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/first" />
    <TextView
        android:text="+"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/main_num2_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/second" />

    <Button
        android:id="@+id/main_next_btn"
        android:text="GO TO NEXT ACTIVITY"
        android:onClick="nextButtonClick"
        android:layout_width="@dimen/next_button_size"
        android:layout_height="wrap_content" />
</LinearLayout>
