<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/main_val1_edit_text"
            android:layout_width="@dimen/val_input_edit_size"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/plus_symbol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/main_val1_edit_text"
            android:text="@string/plus_symbol"
            android:textSize="@dimen/plus_symbol_text_size" />

        <EditText
            android:id="@+id/main_val2_edit_text"
            android:layout_width="@dimen/val_input_edit_size"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/plus_symbol_text" />
    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="@dimen/submit_button_size"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_centerHorizontal="true"
        android:text="@string/result" />
</RelativeLayout>